<p id="notice"><%= notice %></p>

<h1>Bookshelves</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookshelves.each do |bookshelf| %>
      <tr>
        <td><%= bookshelf.user %></td>
        <td><%= bookshelf.book %></td>
        <td><%= bookshelf.number %></td>
        <td><%= link_to 'Show', bookshelf %></td>
        <td><%= link_to 'Edit', edit_bookshelf_path(bookshelf) %></td>
        <td><%= link_to 'Destroy', bookshelf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookshelf', new_bookshelf_path %>
